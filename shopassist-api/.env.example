# Example environment configuration
# Copy this file to .env and fill in your actual values

# API Configuration
DEBUG=false
use_dumb_service=true

# Embedding Configuration
# Choose either 'azure_openai' or 'transformers' as the provider
EMBEDDING_PROVIDER=azure_openai
#EMBEDDING_PROVIDER = transformers

# Azure OpenAI Configuration (alternative to OpenAI)
AZURE_OPENAI_ENDPOINT=https://<>.openai.azure.com/
AZURE_OPENAI_API_VERSION=2024-02-15-preview
AZURE_OPENAI_EMBEDDING_MODEL=your_text-embedding-model-name
AZURE_OPENAI_EMBEDDING_MODEL_DEPLOYMENT=your_text-embedding-model-deployment-name

AZURE_OPENAI_MODEL=gpt-4.1-mini
AZURE_OPENAI_MODEL_DEPLOYMENT=gpt-4.1-mini_shopassist

#for nano model configuration
AZURE_OPENAI_NANO_MODEL=gpt-4.1-nano
AZURE_OPENAI_NANO_MODEL_DEPLOYMENT=gpt-4.1-nano_shopassist

#For transformers provider
TRANSFORMERS_EMBEDDING_MODEL=sentence-transformers/multi-qa-mpnet-base-dot-v1
TRANSFORMERS_EMBEDDING_MODEL_DIM=768

TRANSFORMERS_CATEGORY_EMBEDDING_MODEL=intfloat/e5-large-v2
TRANSFORMERS_CATEGORY_EMBEDDING_MODEL_DIM=1024


# Azure AI Search
AZURE_SEARCH_ENDPOINT=https://your-search-service.search.windows.net
AZURE_SEARCH_KEY=your_search_admin_key_here
AZURE_SEARCH_INDEX=products

# Azure Storage
AZURE_STORAGE_CONNECTION_STRING=DefaultEndpointsProtocol=https;AccountName=...

COSMOSDB_ENDPOINT=https://<your_endpoint>.documents.azure.com:443/
COSMOSDB_DATABASE=shopassist-ai

#milvus config
MILVUS_HOST=milvus-standalone
MILVUS_PORT=19530

#NEEDED FOR langgraph\checkpoint\redis\aio.py"
REDIS_URL=redis://localhost:6379


# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=logs/shopassist_api.log
LOG_TO_CONSOLE=true


# Milvus Configuration
MILVUS_HOST=localhost
MILVUS_PORT=19530

MILVUS_PRODUCT_COLLECTION=products_collection
MILVUS_KNOWLEDGE_BASE_COLLECTION=knowledge_base_collection

# Similarity Thresholds
THRESHOLD_PRODUCT_SIMILARITY=0.8
THRESHOLD_KNOWLEDGE_BASE_SIMILARITY=0.75

THRESHOLD_CATEGORY_SIMILARITY=0.8
TOP_K_CATEGORIES = 3

# Langchain / Langsmith Configuration
LANGCHAIN_TRACING_V2="true"
LANGSMITH_API_KEY="<langsmith_api_key_here>"
LANGCHAIN_PROJECT= "<langchain_project_name_here>"